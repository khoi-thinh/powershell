@echo off
set "sourceFile=voca.txt"

rem Get the current date and time
for /f "delims=" %%a in ('wmic OS Get localdatetime ^| find "."') do set datetime=%%a

rem Format the date and time (YYYYMMDD-HHMMSS)
set "formattedDateTime=%datetime:~0,4%%datetime:~4,2%%datetime:~6,2%-%datetime:~8,2%%datetime:~10,2%%datetime:~12,2%"

set "newName=voca_%formattedDateTime%.txt"

ren "%sourceFile%" "%newName%"
